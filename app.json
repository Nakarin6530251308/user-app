{
  "expo": {
    "name": "ThaiRescue Map",
    "slug": "user-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "thairescue",
    "userInterfaceStyle": "automatic",

    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.got.safezone",
      "infoPlist": {
        "NSCameraUsageDescription": "แอปต้องการใช้กล้องเพื่อถ่ายรูปแจ้งเหตุฉุกเฉิน",
        "NSPhotoLibraryUsageDescription": "แอปต้องการเข้าถึงคลังภาพเพื่อเลือกรูปประกอบการแจ้งเหตุ",
        "NSLocationWhenInUseUsageDescription": "แอปต้องการตำแหน่งของคุณเพื่อระบุจุดเกิดเหตุและนำทาง"
      }
    },

    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.got.safezone",
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ]
    },

    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },

    "plugins": [
      "expo-router",
      "expo-notifications",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "อนุญาตให้ ThaiRescue ใช้ตำแหน่งของคุณเพื่อระบุจุดเกิดเหตุและนำทาง"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "อนุญาตให้เข้าถึงรูปภาพเพื่อส่งประกอบการแจ้งเหตุ",
          "cameraPermission": "อนุญาตให้ใช้กล้องเพื่อถ่ายภาพเหตุการณ์"
        }
      ],
      [
        "@maplibre/maplibre-react-native",
        {
          "android": {
            "useTextureView": true
          }
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "kotlinVersion": "2.0.21",
            "packagingOptions": {
              "pickFirst": [
                "lib/x86/libc++_shared.so",
                "lib/x86_64/libc++_shared.so",
                "lib/armeabi-v7a/libc++_shared.so",
                "lib/arm64-v8a/libc++_shared.so"
              ]
            }
          }
        }
      ]
    ],

    "experiments": {
      "typedRoutes": true
    },

    "extra": {
      "router": {},
      "eas": {
        "projectId": "e404cfe4-34dc-423e-8744-5c529193d784"
      }
    }
  }
}
